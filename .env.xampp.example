# Laravel Sanctum and Session settings for XAMPP
# Next.js frontend is assumed at http://localhost:3001
SANCTUM_STATEFUL_DOMAINS=localhost:3001,127.0.0.1:3001,localhost:8000
SESSION_DOMAIN=localhost # Appropriate when both Laravel and Next.js are on localhost (different ports)
SESSION_SECURE_COOKIE=false
ALLOWED_ORIGINS=http://localhost:3001 # Assumed Next.js admin panel URL for XAMPP

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=bergambar # Ensure this DB exists in XAMPP's MySQL and is accessible
DB_USERNAME=root
DB_PASSWORD= # XAMPP default is often empty, adjust if your XAMPP MySQL has a root password

BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

MEMCACHED_HOST=127.0.0.1

REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
